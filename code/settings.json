{
  "editor.accessibilitySupport": "off",
  "editor.codeLens": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.folding": false,
  "editor.fontFamily": "Iosevka",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.indentation": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.inlayHints.fontSize": 12,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.wordBasedSuggestions": "off",
  "errorLens.borderRadius": "0.5em",
  "errorLens.fontSize": "12",
  "errorLens.messageBackgroundMode": "message",
  "errorLens.padding": "0.3em",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "git.rebaseWhenSync": true,
  "git.replaceTagsWhenPull": true,
  "markdown.preview.fontFamily": "Iosevka",
  "markdown.preview.fontSize": 16,
  "markdown.preview.markEditorSelection": false,
  "problems.decorations.enabled": false,
  "search.decorations.badges": false,
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "none",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.env.osx": { "EDITOR": "code --wait" },
  "terminal.integrated.fontFamily": "Iosevka Term",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.lineHeight": 1.25,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.shellIntegration.showCommandGuide": false,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.tabs.enabled": false,
  "window.commandCenter": false,
  "window.newWindowDimensions": "inherit",
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.empty.hint": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.reduceMotion": "on",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "none",
  "zig.zls.enabled": "on",
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["g", "a"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["g", "A"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["g", "y"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["g", "r"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["c", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["c", "r", "r"],
      "commands": ["editor.action.quickFix"]
    }
  ]
}
