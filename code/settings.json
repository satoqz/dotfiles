{
  "[toml]": {
    "editor.formatOnSave": false
  },
  "breadcrumbs.enabled": false,
  "diffEditor.renderSideBySide": false,
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "GeistMono Nerd Font",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.guides.highlightActiveIndentation": false,
  "editor.guides.indentation": false,
  "editor.inlayHints.fontSize": 14,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.semanticHighlighting.enabled": true,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.wordBasedSuggestions": "off",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.colors": false,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.defaultCloneDirectory": "~/src",
  "git.openRepositoryInParentFolders": "always",
  "outline.problems.colors": false,
  "search.decorations.colors": false,
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.env.osx": {
    "EDITOR": "code --wait"
  },
  "terminal.integrated.fontFamily": "GeistMono Nerd Font Mono",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.shellIntegration.history": 100000,
  "terminal.integrated.smoothScrolling": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vs-kubernetes": {
    "disable-linters": [
      "resource-limits"
    ]
  },
  "window.commandCenter": false,
  "window.newWindowDimensions": "inherit",
  "window.title": "${rootName}",
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editorGroupHeader.tabsBackground": "#1e1e1e",
      "statusBar.background": "#252526",
      "statusBar.border": "#2b2b2b",
      "statusBar.debuggingBackground": "#252526",
      "statusBar.foreground": "#cccccc",
      "statusBar.noFolderBackground": "#252526",
      "statusBarItem.remoteBackground": "#252526",
      "statusBarItem.remoteForeground": "#cccccc",
      "tab.border": "#1e1e1e",
      "tab.inactiveBackground": "#1e1e1e",
      "titleBar.activeBackground": "#252526"
    }
  },
  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.decorations.colors": false,
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.reduceMotion": "on",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "single"
}
